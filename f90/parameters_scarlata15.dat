  overwrite_model     = sphere_scarlata15

# scarlata+15
  fix_box_size_cm     = 1.543d23  ! cm ! 50 kpc
  fix_vel             = 50.d5     ! cm/s  
  rsf                 = 0.02      ! box units => 1kpc
  rw                  = 0.40      ! box units => 20 kpc
  fix_temp            = 1.d4      ! K
  fix_taudust         = 0.000     
  vel_gamma           = 1.0
  rho_rsf             = 0.1       ! cm-3		      

# miscelaneous parameters
  verbose             = T
