[gas_composition] 
# mixture parameters
  deut2H_nb_ratio     = 0.0 ! 3.000E-05
  dust_to_metal_ratio = 0.0 ! 3.000E-01
  mH_over_mdust       = 1.33E-10 ! = mh/md where md = rhod * Vgrain=(3g/cm^3)*4/3*pi*(1.d-5)^3 Inoue12 
# overwrite parameters
